<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/popup_small" >

    <TextView
        android:id="@+id/text"
        style="@style/textstyleNoPadding"
        android:layout_width="match_parent"
        android:layout_height="83dp"
        android:gravity="center"
        android:layout_marginTop="3dp"
        android:padding="5dp" />

    <RelativeLayout
        android:id="@+id/relBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text"
        android:layout_margin="2dp"
        android:gravity="center_horizontal" >

        <Button
            android:id="@+id/dialogButtonOK"
            style="@style/buttonStyle"
            android:layout_width="120dp"
            android:layout_height="45dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/buttonred_new"
            android:gravity="center" />

        <Button
            android:id="@+id/dialogButtonCancel"
            style="@style/buttonStyle"
            android:layout_width="120dp"
            android:layout_height="45dp"
            android:layout_margin="5dp"
            android:background="@drawable/buttonsubmit_new"

            android:layout_toRightOf="@+id/dialogButtonOK"
            android:gravity="center" />
    </RelativeLayout>

</RelativeLayout>